<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_main_pfo_rcv_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="포트폴리오 제목"
        android:textColor="@color/black"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:gravity="center"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_main_pfo_rcv_tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10:00 새로운 종목이 추가되었습니다."
        android:textColor="@color/black"
        android:fontFamily="@font/noto_sans_cjk_kr_regular"
        android:gravity="center"
        android:background="@drawable/boundary_square_default_white"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/item_main_pfo_rcv_tv_title" />

    <LinearLayout
        android:id="@+id/item_main_pfo_rcv_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/item_main_pfo_rcv_tv_message"/>

</LinearLayout>