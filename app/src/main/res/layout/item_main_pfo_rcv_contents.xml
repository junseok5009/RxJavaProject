<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

        <TextView
            android:id="@+id/item_main_pfo_rcv_contents_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="삼성전자"
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_main_pfo_rcv_contents_tv_contents1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘 +4.89% 상승 하였습니다."
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans_cjk_kr_regular"
            android:textSize="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/item_main_pfo_rcv_contents_tv_title" />

        <TextView
            android:id="@+id/item_main_pfo_rcv_contents_tv_contents2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="보유중 +1.3%"
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans_cjk_kr_regular"
            android:textSize="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/item_main_pfo_rcv_contents_tv_contents1" />

</androidx.constraintlayout.widget.ConstraintLayout>