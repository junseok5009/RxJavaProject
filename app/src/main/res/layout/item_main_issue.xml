<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="250dp"
        android:layout_height="280dp"
        android:padding="10dp"
        android:background="@drawable/boundary_round_pink_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/fm_main_issue_tv_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제목입니다"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/CherryBlossom"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/fm_main_issue_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="안녕하세요 \n 지금 인사드립니다 \n 반갑습니다"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/fm_main_issue_tv_keyword" />

        <TextView
            android:id="@+id/fm_main_issue_tv_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="6일 오전 5시 경기도 오산 기지에서 미 공군 수송기 C-17 글로브마스터가 날아올랐다. 새벽 하늘을 가른 비행기가 잠시 뒤 착륙한 곳은 타이베이 쑹산공항. 방한 일정을 수행중이던 태미 더크워스·크리스토퍼 쿤스(이상 민주), 댄 설리번(공화) 연방 상원의원이 대만을 전격 방문한 것이다. 우자오셰 대만 외교부장 등의 영접을 받은 의원단은 기자회견에서 “대만에 미국산 백신 75만회분을 지원하겠다”고 발표했다."
            app:layout_constraintTop_toBottomOf="@+id/fm_main_issue_tv_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fm_main_issue_tv_rcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:spanCount="2"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/fm_main_issue_tv_contents"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>